  "method": [
    {
      "post_notes": [],
      "pre_notes": [],
      "type": "METHOD_STEP",
      "text": "Melt the butter and mix in the porridge oats, followed by the flour, baking powder and salt"
    },
    {
      "post_notes": [],
      "pre_notes": [],
      "type": "METHOD_STEP",
      "text": "Whisk the egg and sugar together until pale and thick"
    },
    {
      "post_notes": [],
      "pre_notes": [],
      "type": "METHOD_STEP",
      "text": "Fold the oats into the egg and sugar"
    },
    {
      "post_notes": [],
      "pre_notes": [],
      "type": "METHOD_STEP",
      "text": "Line baking sheets with parchment, and spoon out the mix. You should only have 6 per large baking sheet as they spread a lot"
    },
    {
      "post_notes": [],
      "pre_notes": [],
      "type": "METHOD_STEP",
      "text": "Bake at 170C until the edges are going a medium brown. About 6-8 minutes"
    },
    {
      "post_notes": [],
      "pre_notes": [],
      "type": "METHOD_STEP",
      "text": "Remove from the oven, slide the baking paper off the pan, and leave to cool"
