    "method": [
        {
            "text": "Preparing the Ganache",
            "method_steps": [
                {
                    "text": "Make the ganache by heating the cream and melting the other ingredients into it",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Freeze, and cut into cylinders 3cm long, and 4cm smaller in diameter than your ring molds",  
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                }
            ],
            "notes": [],
            "type": "METHOD_SUB_LIST"
        },
        {
            "text": "Making the Cakes",
            "method_steps": [
                {
                    "text": "Melt the chocolate and butter",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Whisk the egg white until stiff, add half the sugar and continue whisking until shiny",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "In a separate bowl, whisk the egg yolk with the other half of the sugar until pale",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Fold the chocolate and butter into the egg yolk mixture, then gently fold in a third of the egg whites, the remaining egg whites, and finally the cornflour, almonds, and salt",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                }
            ],
            "notes": [],
            "type": "METHOD_SUB_LIST"
        },
        {
            "text": "Assembling and Baking",
            "method_steps": [
                {
                    "text": "Butter the ring molds, line with baking paper, and then butter the paper", 
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Place a sheet of baking paper on a baking tray, and put the ring molds on top", 
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Fill the ring mold half full of cake mix, prod the cylinder of ganache into the middle, and top with more cake mix until 80% full",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Bake at 180C for 15 minutes",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Find a de-ring-molding tool - this should be something a bit narrower and taller than the ring mold, and will help you get the cake out af the mold e.g. a tall narrow glass or a tea strainer",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "For each cake, slide a palette knife under the ring mold, then lift the ring mold and cake and set on top of your de-ring-molder. Slide the ring mold down off the cake, put your cake on it's final plate before removing the paper",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                }
            ],
            "notes": [ {
                "text": "When using top and bottom heat, it started to burn a little on the bottom by the time the sides were done. Should try 160C fan instead",
                "note_type": null
            }],
            "type": "METHOD_SUB_LIST"
        }
