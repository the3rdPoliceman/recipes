    "method": [
        {
            "text": "Bring milk, cream, vanilla, inverted sugar and 50g sugar to the boil, then leave to infuse for half an hour",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Mix the remaining sugar, the egg yolks and the salt in a bowl",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Heat up the milk again, then gradually mix into the egg mix",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Put this mix back in the saucepan and heat until 80C to custard",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Chill, strain, and churn, adding the olive oil and beating to break up ice crystals half way through churning",
