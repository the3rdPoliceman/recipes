    "method": [
        {
            "text": "Making the Batter",
            "method_steps": [
                {
                    "text": "Melt butter in the frying pan you're going to use to make the crepes",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Put dry ingredients, egg, and a bit of the milk in a bowl and whisk to get a smooth thick batter",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Add the rest of the milk, and mix it in",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Dump the melted butter in to the batter, and mix again",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                }
            ],
            "notes": [],
            "type": "METHOD_SUB_LIST"
        },
        {
            "text": "Cooking",
            "method_steps": [
                {
                    "text": "Don't add any more butter to the pan - the butter in the mix is enough",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Cooking it lower, and spreading the batter thinner results in a significantly crispier crepe",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                },
                {
                    "text": "Pour the batter in one side of the pan (rather than the middle) and let it flow across",
                    "post_notes": [],
                    "pre_notes": [],
                    "type": "METHOD_STEP"
                }
            ],
            "notes": [],
            "type": "METHOD_SUB_LIST"
        }
