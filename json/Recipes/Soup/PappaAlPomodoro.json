    "method": [
        {
            "text": "Roast the cherry tomatoes with some oil, salt, pepper, a bit of the basil and one sliced clove of garlic",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Slice the rest of the garlic and fry for minute along with the basil stalks",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Add the tinned tomatoes,and 1 tin of water. Bring to the boil, then simmer for 15 minutes",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Tear in the bread up, mix well and season to taste",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Tear in most of the remaining basil leaves and let the soup sit on a low heat for 10 minutes",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Add in the cherry tomatoes from the oven",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Add water to the soup if you need to (it should be like porridge)",
            "post_notes": [],
            "pre_notes": [],
            "type": "METHOD_STEP"
        },
        {
            "text": "Remove from the heat, add 6 tablespoons of extra virgin olive oil and serve with basil",
